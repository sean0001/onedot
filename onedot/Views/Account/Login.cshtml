@using one.OneDot.ViewModels
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Login</title>

    <link href="~/Content/s01/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/s01/animate.css" rel="stylesheet">
    <link href="~/Content/s01/style.css" rel="stylesheet">




</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">Do+</h1>
            </div>


            @*<h3>Welcome to IN+</h3>
        <p>
            Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.
        </p>
        <p>Login in. To see it in action.</p>*@

            @Html.OneValidationSummary()
            <form class="m-t" role="form" action="@(Url.Action("login","account",new { ReturnUrl = ViewBag.ReturnUrl }))" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = Lang.UserName })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control", placeholder = Lang.Password })
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">@(Lang.Btn_Login)</button>

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(a => a.RememberMe)
                            <i></i> @(Lang.RememberMe)
                        </label>
                    </div>
                </div>


                <p class="text-muted text-center"><small>Do not have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@(Url.Action("account","login"))">Create an account</a>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2015</small> </p>
        </div>
    </div>

</body>

</html>


