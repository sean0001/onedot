@model List<one.OneDot.ViewModels.SlidesViewModels>
@{ 
    bool MulSlide = Model.Count > 1 ? true : false;


}



<section class="carousel slide cid-qurPtNxpG6" data-interval="false" data-rv-view="364" id="slider1-1">
    <div class="full-screen">
        <div class="mbr-slider slide carousel" data-interval="false" data-keyboard="false" data-pause="true" data-ride="false">
            
            <ol class="carousel-indicators">
                @foreach (var item in Model)
                {
                    if (MulSlide) { 
                    <li class="@(item.Id == 1 ? "Active" : "")"  data-app-prevent-settings=""  data-slide-to="@item.Id" data-target="#slider1-1"></li>
                    }
                }
            </ol>

            <div class="carousel-inner" role="listbox">
                @foreach (var item in Model)
                {
                    <div class="carousel-item slider-fullscreen-image  @(item.Id == 1 ? "active" : "")"  data-bg-video-slide="false" style="background-image: url('../../@(item.ImgUrl)');">
                        <div class="container container-slide">
                            <div class="image_wrapper">
                                <div class="mbr-overlay"></div>
                                <img src="~/@(item.ImgUrl)" />
                                <div class="carousel-caption justify-content-center">
                                    <div class="col-10 align-right">

                                        <h2 class="mbr-fonts-style display-5">
                                            @(item.Title)
                                        </h2>
                                        <!--style="width:420px;margin-left:auto;margin-right:auto;"-->
                                        <p class="lead mbr-text mbr-fonts-style display-4" >
                                            @(item.Text)
                                        </p>

                                        <div buttons="0" class="mbr-section-btn">
                                            @foreach (var btn in item.btns)
                                            {
                                                <a class="btn btn-success display-4" href = "@(btn.Url)">
                                                    @(btn.Caption)
                                                </a>
                                            }
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

           @if (MulSlide)
           {

            <a class="carousel-control carousel-control-prev" data-app-prevent-settings="" data-slide="prev" href="#slider1-1" role="button">
                <span aria-hidden="true" class="mbri-left mbr-iconfont">
                </span>
                <span class="sr-only">
                    Previous
                </span>
            </a>


                <a class="carousel-control carousel-control-next" data-app-prevent-settings="" data-slide="next" href="#slider1-1" role="button">
                    <span aria-hidden="true" class="mbri-right mbr-iconfont">
                    </span>
                    <span class="sr-only">
                        Next
                    </span>
                </a>
           }

        </div>
    </div>
</section>
    





